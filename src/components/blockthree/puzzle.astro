---
import "./puzzle.css";
---

<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 100vh; width: 100%;">
  <h2 style="font-size: 2.5rem; color: #ec4899; margin-bottom: 1rem; font-family: 'Cherry Bomb One', cursive; text-shadow: 2px 2px 4px rgba(0,0,0,0.1);">
    Rompecabezas
  </h2>
  <div id="puzzle-placeholder" style="width: 1000px; height: 600px; border: none; box-shadow: 0 2px 16px #0002; border-radius: 12px; background: linear-gradient(135deg, #FFBBBB, #FF8F8F); display: flex; justify-content: center; align-items: center; color: white; font-size: 1.2rem;">
    Cargando puzzle...
  </div>
  <script>
    // Cargar el iframe de forma asÃ­ncrona
    window.addEventListener('load', function() {
      setTimeout(() => {
        const placeholder = document.getElementById('puzzle-placeholder');
        if (placeholder && placeholder.parentNode) {
          const iframe = document.createElement('iframe');
          iframe.src = "/Puzzlefy-main/website/index.html?image=/puzzle/rompecabezas.jpg&cols=4&rows=4";
          iframe.width = "1000";
          iframe.height = "600";
          iframe.style = "border: none; box-shadow: 0 2px 16px #0002; border-radius: 12px;";
          iframe.allowFullscreen = true;
          
          placeholder.parentNode.replaceChild(iframe, placeholder);
        }
      }, 500);
    });
  </script>
</div>
